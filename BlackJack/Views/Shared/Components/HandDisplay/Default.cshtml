@model Hand

<div class="hand mb-4">
    @for (int i = 0; i < Model.Count; i++)
    {
        if (i == 0 && Model.HideHoleCard)
        {
            <img src="~/images/back.svg" />
        }
        else
        {
            <img src="~/images/@(Model.Cards[i].Name).svg" />
        }
    }
</div>

